<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/newOldDeviceImage"
        android:src="@drawable/red_icon"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/btListItemName"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:text="name"
        android:textSize="23dp"
        android:layout_alignTop="@+id/newOldDeviceImage"
        android:layout_toEndOf="@+id/newOldDeviceImage" />
    <TextView
        android:id="@+id/btListItemUuid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="uuid"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btListItemName" />
    <TextView
        android:id="@+id/btListItemMajor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="major"
        android:textSize="12dp"
        android:layout_below="@+id/btListItemName"
        android:layout_toEndOf="@+id/btListItemName" />
    <TextView
        android:id="@+id/btListItemMinor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="minor"
        android:textSize="12dp"
        android:layout_below="@+id/btListItemName"
        android:layout_alignStart="@+id/btListItemMajor"
        android:layout_marginStart="65dp" />
    <TextView
        android:id="@+id/btListStrength"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="strength"
        android:textSize="12dp"
        android:layout_alignTop="@+id/btListItemMajor"
        android:layout_toEndOf="@+id/btListItemMajor"
        android:layout_marginStart="83dp"
        android:layout_alignBottom="@+id/btListItemMajor" />
    <TextView
        android:id="@+id/btTimeSinceLastSeen"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="strength"
        android:textSize="12dp"
        android:layout_alignTop="@+id/btListStrength"
        android:layout_toEndOf="@+id/btListStrength"
        android:layout_marginStart="83dp"
        android:layout_alignBottom="@+id/btListStrength" />
</RelativeLayout>